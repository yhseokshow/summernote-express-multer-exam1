<!DOCTYPE html>
<html lang="en">
  <head>
    <title>List - Posts</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <!-- Bootstrap CSS v5.0.2 -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="/stylesheets/style.css"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div
      style="
        width: 900px;
        border: 1px solid lightgray;
        border-radius: 10px;
        padding: 50px;
      "
    >
      <a href="/posts/form" class="btn btn-success">New Post</a>
      <% for(var i = 0; i < database.length; i++) { %>
      <div style="margin: 20px 0;">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">
              <a href="/posts/view/<%= database[i].id %>"
                ><%= database[i].title %></a
              >
            </h4>
            <span class="badge rounded-pill bg-primary"
              ><i class="fa fa-clock-o" aria-hidden="true"></i> registred</span
            >
            <%= database[i].regdt %>&nbsp;
            <i class="fa fa-clock-o" aria-hidden="true"></i>
            <span class="badge rounded-pill bg-warning">
              <i class="fa fa-calendar" aria-hidden="true"></i> modified</span
            >
            <%= database[i].moddt %>

            <div
              style="border: 1px solid lightgray; width: 100%; margin: 5px 0;"
            ></div>

            <p class="card-text"><%- database[i].content %></p>
          </div>
        </div>
      </div>
      <% } %>
    </div>

    <!-- Bootstrap JavaScript Libraries -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
